<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tamertokbaev.momari">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_mobile_phone_with_person"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_mobile_phone_with_person"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Qytap">

        <activity
            android:name="com.tamertokbaev.momari.activities.GetStartedActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.tamertokbaev.momari.activities.SignInActivity"/>
        <activity android:name="com.tamertokbaev.momari.activities.SignUpActivity"/>
        <activity android:name="com.tamertokbaev.momari.activities.HomeActivity" android:windowSoftInputMode="adjustPan"/>
    </application>
</manifest>